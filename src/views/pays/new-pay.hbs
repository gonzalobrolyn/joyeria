<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Registrar Ingreso</h3>
    </div>
    <div class="card-body">
      <form action="/pays/new-pay/{{idLocal}}" method="POST">
        <div class="form-group">
          <textarea name="concepto" class="form-control" placeholder="Concepto del ingreso" autofocus>{{concepto}}</textarea>
        </div>
        <div class="form-group">
          <input type="number" name="monto" class="form-control" placeholder="Monto" step="0.01" value="{{monto}}">
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="formaPago" id="formaDePago1" checked value="En Efectivo">
          <label class="form-check-label" for="formaDePago1">
            Pago con efectivo
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="formaPago" id="formaDePago2" value="Con Tarjeta">
          <label class="form-check-label" for="formaDePago2">
            Pago con tarjeta
          </label>
        </div>
        <p></p>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar Ingreso
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
