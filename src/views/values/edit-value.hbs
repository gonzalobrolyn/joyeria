<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Valoración</h3>
    </div>
    <div class="card-body">
      <form action="/values/edit-value/{{value._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <textarea name="nombre" class="form-control" placeholder="Nombre de la Valoración">{{value.nombre}}</textarea>
        </div>
        <div class="form-group">
          <input type="number" name="precio" class="form-control" step="0.01" placeholder="Precio de la Valoración" value="{{value.precio}}">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar cambios
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
