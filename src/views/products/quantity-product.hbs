<div class="row">
    <div class="col-md-5 mx-auto">
    <div class="card">
      <div class="card-header">
        <h3>Corregir Cantidad de Producto en {{item.idLocal.nombre}}</h3>
      </div>
      <div class="card-body">
        <form action="/products/update-quantity" method="POST">
          <input type="text" hidden name="idStock" value="{{item._id}}">
          <input type="text" hidden name="idLocal" value="{{item.idLocal._id}}">
          <div class="form-group">
            <input type="text" name="codigo" readonly class="form-control" value="{{item.idProducto.codigo}}">
          </div>
          <div class="form-group">
            <textarea name="nombre" readonly class="form-control">{{item.idProducto.nombre}}</textarea>
          </div>
          <div class="form-group">
            <input type="text" name="cantActual" readonly class="form-control" value="{{item.cantidad}}">
          </div>
          <div class="form-group">
            <input type="number" name="cantidad" class="form-control" placeholder="Nueva Cantidad" min="1">
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Corregir Cantidad
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>